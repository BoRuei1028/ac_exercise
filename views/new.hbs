<div class="container text-center m-3">
  <h1 class="m-2">新增餐廳</h1>
  <form action="/restaurant" method="post">
    <div class="mb-2 d-flex flex-column md align-items-center">
      <label for="name">餐廳名稱:</label>
      <input type="text" name="name" placeholder="Alpha蔬食餐廳" required class="col-3">
    </div>
    <div class="mb-2 d-flex flex-column md align-items-center">
      <label for="name_en">英文店名:</label>
      <input type="text" name="name_en" placeholder="Alpha Vegan Restaurant" required class="col-3">
    </div>
    <div class="mb-2 d-flex flex-column md align-items-center">
      <label for="category">餐廳類型:</label>
      <input type="text" name="category" placeholder="蔬食" list="categoryOptions" required class="col-3">
      <datalist id="categoryOptions">
        <option>美式料理</option>
        <option>咖啡簡餐</option>
        <option>蔬食料理</option>
        <option>日本料理</option>
        <option>義式餐廳</option>
      </datalist>
    </div>
    <div class="mb-2 d-flex flex-column md align-items-center">
      <label for="image">圖片連結:</label>
      <input type="url" name="image" required class="col-3">
    </div>
    <div class="mb-2 d-flex flex-column md align-items-center">
      <label for="location">餐廳地址:</label>
      <input type="text" name="location" placeholder="台南市九又四分之一街12號" required class="col-3">
    </div>
    <div class="mb-2 d-flex flex-column md align-items-center">
      <label for="phone">電話:</label>
      <input type="text" name="phone" placeholder="06 734 5467" required class="col-3">
    </div>
    <div class="mb-2 d-flex flex-column md align-items-center">
      <label for="google_map">GOOGLE地圖連結:</label>
      <input type="url" name="google_map" required class="col-3">
    </div>
    <div class="mb-2 d-flex flex-column md align-items-center">
      <label for="rating">評分:</label>
      <input type="number" name="rating" min="0" max="5" step="0.1" required class="col-3">
    </div>
    <div class="mb-2 d-flex flex-column md align-items-center">
      <label for="description" class="">記錄:</label>
      <textarea type="text" name="description" row="2" required class="col-3"></textarea>
    </div>
    <div class="text-center mt-2">
      <button type="submit" class="btn btn-primary">新增餐廳</button>
      <button type="reset" class="btn btn-secondary">重新輸入</button>
      <a href="/">
        <button type="button" class="btn btn-info">返回首頁</button>
      </a>
    </div>

  </form>
</div>